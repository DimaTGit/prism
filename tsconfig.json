{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "declaration": true,
    "lib": ["es6"],
    "outDir": "build",
    "skipLibCheck": true,
    "typeRoots": [
        "node_modules/@types",
        "node_modules/squel.d.ts"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "**/__tests__/*",
    "**/__mocks__/*"
  ]
}
