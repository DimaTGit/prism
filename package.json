{
  "name": "prism",
  "description": "A framework for building expressive, powerful HTTP APIs",
  "repository": {
    "type": "git",
    "url": "https://github.com/radify/prism.git"
  },
  "private": true,
  "author": "Radify",
  "license": "BSD-3-Clause",
  "devDependencies": {
    "@types/bluebird": "^3.0.35",
    "@types/hapi": "^13.0.37",
    "@types/jest": "^16.0.1",
    "@types/knex": "0.0.35",
    "@types/ramda": "0.0.2",
    "fs-extra-promise": "^0.4.1",
    "jest": "^17.0.3",
    "merge-stream": "^1.0.1",
    "ts-jest": "^17.0.3",
    "typescript": "^2.1.4"
  },
  "jshintConfig": {
    "esnext": true
  },
  "dependencies": {
    "@types/knex": "0.0.35",
    "bluebird": "^3.4.6",
    "knex": "^0.12.6",
    "pg-promise": "^5.4.7",
    "ramda": "^0.22.1"
  },
  "scripts": {
    "prebuild": "npm run clean",
    "build": "npm run build:tsc && npm run build:copy",
    "build:tsc": "tsc",
    "build:copy": "node ./scripts/copy.js",
    "clean": "rm -rf build"
  },
  "version": "1.0.0",
  "jest": {
    "transform": {
      ".ts": "node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": "(/__tests__/.*|\\.(test|spec))\\.ts$",
    "testResultsProcessor": "node_modules/ts-jest/coverageprocessor.js",
    "moduleDirectories": [
      "node_modules",
      "src"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  }
}
